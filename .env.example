# ===========================================
# NotifyHub - Docker Environment Configuration
# ===========================================

# 應用程式設定
APP_NAME=notifyhub
APP_ENV=development

# ===========================================
# 對外 Port 設定
# ===========================================

# 前端 (藍綠部署)
FRONTEND_BLUE_PORT=3001
FRONTEND_GREEN_PORT=3002

# 後端 API
BACKEND_PORT=8080

# phpMyAdmin
PHPMYADMIN_PORT=8081

# ===========================================
# MariaDB 設定
# ===========================================

MARIADB_ROOT_PASSWORD=notifyhub_root_2024
MARIADB_DATABASE=notifyhub
MARIADB_USER=notifyhub
MARIADB_PASSWORD=notifyhub_db_2024

# ===========================================
# CodeIgniter 4 設定
# ===========================================

CI_ENVIRONMENT=development
APP_BASEURL=http://localhost:8080

# JWT 設定
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ===========================================
# 藍綠部署控制
# ===========================================
# 當前活躍的前端版本: blue 或 green
ACTIVE_FRONTEND=blue
